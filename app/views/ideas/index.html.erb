<div class="span12">
    <h5>Welcome back, <%= current_user.email %></h5>

  <h3>Current picture list</h3>

</div> <!-- end span12 -->

<div class="span10 offset1">
  <h4>
        <table>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Date added</th>
      </tr>

    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.description %></td>
            <td><%= idea.created_at.to_date %></td>
        <td><%= link_to 'View', idea, :class => "btn btn-xs btn-info" %></td>
        <td><%= link_to 'Edit', edit_idea_path(idea), :class => "btn btn-xs btn-info" %></td>
        <td><%= link_to 'Delete', idea, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-xs btn-info" %></td>
      </tr>
      <% end %>
      </table>
  </h4>
      
      <br />

    <%= link_to 'New Picture', new_idea_path, :class => "btn btn-primary" %>
</div> <!-- end span10 -->